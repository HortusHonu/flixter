<br />

<div class="booyah-box col-10 offset-1">
	<div class="title-box text-center">
		<h1>Learn Something Today</h1>
	</div>
	<br />

	<% @courses.each do |course| %>
		<div class="course-box">
			<h2 class="text-center">
				<%= link_to course.title, course_path(course) %></h2>
			<br />
			<div class="image-center">
				<%= image_tag course.image, class: 'img-fluid' %>
				<br /><br />
			</div>
			<div class="row">
				<div class="col-10 offset-1 text-center">
					<%= course.description %>
					<br /><br />
				</div>
				<div class="col-10 offset-1 text-center">
					<%= link_to 'More Details', course_path(course), class: 'btn btn-primary btn-large' %>
					<br /><br />
				</div>
			</div>
		</div>
		<br class="clr" />
	<% end %>
</div>