<div class="booyah-box col-10 offset-1 text-center">
	<div class="title-box col-6 offset-3 text-center">
		<h1>What I'm Learning</h1>
	</div>
	<br />
	<% current_user.enrolled_courses.each do |course| %>
	<div class="course-box col-10 offset-1">
		<h3 class="col-10 offset-1 text-center">
			<%= link_to course.title, course_path(course) %>
		</h3>
		<br />
		<%= image_tag course.image, class: 'img-fluid' %>
		<br />
		<div class="row">
			<div class="col-10 offset-1 text-center">
				<%= course.description %>
			</div>
			<br /><br />
			<div class="col-10 offset-1 text-center">
				<%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
			</div>
		</div>
			<br class="clr" />
	</div>
	<br />
	<% end %>
	<br /><br />

	<div class="title-box col-6 offset-3 text-center">
		<h1>What I'm Teaching</h1>
	</div>
	<br />
		<% current_user.courses.each do |course| %>
	<div class="course-box col-10 offset-1">
			<h3 class="text-center">
				<%= link_to course.title, course_path(course) %>
			</h3>
			<br />
			<%= image_tag course.image, class: 'img-fluid' %>
			<br />
			<div class="row">
				<div class="col-10 offset-1 text-center">
					<%= course.description %>
				</div>
				<br /><br />
				<div class="col-10 offset-1 text-center">	
					<%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
				</div>
			</div>
			<br class="clr" />		
	</div>
	<br />
		<% end %>
</div>