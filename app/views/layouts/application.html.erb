<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://vjs.zencdn.net/6.6.3/video-js.css" rel="stylesheet">
  </head>

  <body>
  	<div id="flex-content-container">
			<nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
  		
  			<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
    			<span class="navbar-toggler-icon"></span>
  			</button>
        
        <div class="nav-title">
    			<%= link_to 'Flixter', root_path %>
        </div>

  			<div class="collapse navbar-collapse" id="navbarTogglerDemo02">
    			<ul class="navbar-nav mr-auto mt-2 mt-md-0">
          <!-- Add a link_to here for left-hand nav -->            
    			</ul>
    			<ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
            </li>
    				<% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
              </li>
    					<li class="nav-item">
    						<%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
    					</li>
    				<% else %>
    					<li class="nav-item">
    						<%= link_to 'Log In', user_session_path, class: 'nav-link' %>
    					</li>
    					<li class="nav-item">
    						<%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
    					</li>
    				<% end %>
    			</ul>
  			</div>
			</nav>

			<% if notice.present? %>
				<p class="alert alert-info"><%= notice %></p>
			<% end %>
			<% if alert.present? %>
				<p class="alert alert-danger"><%= alert %></p>
			<% end %>

			<%= yield %>

		</div>

		<div id="footer">
			<div class="container">
        <div class="row">
          <div class="col-12 col-sm-3 text-center">
    				<b>Instructors</b>
    				<hr>
    				<%= link_to 'Teach a Course', new_instructor_course_path %>
            <br />
            <%= link_to 'My Dashboard', dashboard_path %>
            <br /><br />
    			</div>
          <div class="col-12 col-sm-3 text-center">
            <b>About</b>
            <hr>
            <%= link_to 'Team', team_path %>
            <br />
            <%= link_to 'Careers', careers_path %>
            <br />
            <%= link_to 'Privacy Policy', privacy_path %>
            <br /><br />
          </div>
          <div class="col-12 col-sm-3 text-center">
            <b>Contact</b>
            <hr>
            <%= mail_to 'james.eric.knight@gmail.com', "Email Us" %>
            <br />
            The Motor City
            <br />
            Detroit, MI 48207
            <br /><br />
          </div>
          <div class="col-12 col-sm-3 social text-center">
            <b>Social</b>
            <hr>
            <br />
            <%= link_to 'https://github.com/HortusHonu', target: :_blank do %>
              <span class="fa fa-github-square fa-2x social-button"></span>
            <% end %>  
            <%= link_to 'https://www.facebook.com/hortushonu', target: :_blank do %>
              <span class="fa fa-facebook-square fa-2x social-button"></span>
            <% end %>
            <%= link_to 'https://twitter.com/HortusHonu', target: :_blank do %>
              <span class="fa fa-twitter-square fa-2x social-button"></span>
            <% end %>
          </div>
        </div>
        <p class="text-center">&copy; Flixter 2018</p>
      </div>
		</div>

    <script src="https://vjs.zencdn.net/6.6.3/video.js"></script>
    <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>   
	</body>
</html>
